# Holistic Vet Directory - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DATA SOURCE
# =============================================================================
# Set to 'airtable' to fetch from Airtable, or 'csv' to use local CSV files
DATA_SOURCE=csv

# =============================================================================
# AIRTABLE CONFIGURATION
# =============================================================================
# Get your API key from: https://airtable.com/create/tokens
# Note: Airtable now uses Personal Access Tokens instead of API keys
AIRTABLE_API_KEY=pat_xxxxxxxxxxxxxxxxxxxx

# Get your Base ID from the Airtable API docs page for your base
# The Base ID starts with "app" (e.g., appXXXXXXXXXXXXXX)
AIRTABLE_BASE_ID=appXXXXXXXXXXXXXX

# =============================================================================
# SITE CONFIGURATION
# =============================================================================
SITE_NAME=Holistic Vet Directory
SITE_DESCRIPTION=Find holistic and integrative veterinarians near you
SITE_URL=https://holisticvetdirectory.com

# Build environment: development or production
BUILD_ENV=development

# Listings per page for pagination
LISTINGS_PER_PAGE=20

# =============================================================================
# GOOGLE SERVICES
# =============================================================================
# Google Maps API key for map embeds
GOOGLE_MAPS_API_KEY=

# =============================================================================
# GOOGLE ADSENSE (set ENABLE_ADSENSE=true to activate)
# =============================================================================
ENABLE_ADSENSE=false
ADSENSE_CLIENT_ID=ca-pub-XXXXXXXXXX
ADSENSE_SLOT_HEADER=
ADSENSE_SLOT_SIDEBAR=
ADSENSE_SLOT_INFEED=
ADSENSE_SLOT_FOOTER=

# =============================================================================
# GOOGLE ANALYTICS 4 (set ENABLE_ANALYTICS=true to activate)
# =============================================================================
# Get your Measurement ID from Google Analytics:
# 1. Go to analytics.google.com
# 2. Admin > Data Streams > Select your stream
# 3. Copy the Measurement ID (starts with G-)
ENABLE_ANALYTICS=false
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_MAPS=true
ENABLE_SEARCH=true
